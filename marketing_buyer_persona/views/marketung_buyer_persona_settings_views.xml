                 <record id="lean_marketing_meeting_place_form" model="ir.ui.view">
            <field name="name">lean_marketing.meeting_place.form</field>
            <field name="model">lean_marketing.meeting_place</field>
            <field name="arch" type="xml">
                <form string="Meeting Place">
