            <field name="name">Meeting Places</field>
            <field name="res_model">lean_marketing.meeting_place</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="lean_marketing_meeting_place_tree"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new meeting place
              </p><p>
                Create tags that fit your brands to better manage.
              </p>
            </field>
        </record>

